---
const title = "Aptech Learning - Shaheed Path";

const author = "Aptech Learning - Shaheed Path";

const description =
    "Get the IT training you need to advance your career with Aptech Learning in Shaheed Path. We offer a range of computer education courses, including programming, web development, and cybersecurity. Enroll today and commit to excellence.";

const keywords = [
    "Aptech Learning",
    "Computer Education",
    "Computer Science Education",
    "Online Learning",
    "IT Courses",
    "Programming Courses",
    "Software Development",
    "Web Development",
    "Digital Marketing",
    "Cybersecurity Courses",
    "Data Science Courses",
    "Networking Courses",
    "Cloud Computing Courses",
    "Mobile App Development",
    "IT Certifications",
    "Professional Development",
    "Career Development",
    "Technical Courses",
    "Top IT Training Institute",
    "Best IT Training Institute",
];

const favicon = "/favicon.ico";
const image = "/images/aptech-logo.png";

const og = {
    title,
    description,
    type: "website",
    url: "https://www.aptechshaheedpath.com",
    site_name: author,
    image,
    image_alt: author,
    locale: "en_US",
};

const twitter = {
    card: "summary",
    site: author,
    title,
    description,
    image,
    creator: author,
};
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(", ")} />
<meta name="author" content={author} />

<meta property="og:title" content={og.title} />
<meta property="og:description" content={og.description} />
<meta property="og:type" content={og.type} />
<meta property="og:url" content={og.url} />
<meta property="og:site_name" content={og.site_name} />
<meta property="og:image" content={og.image} />
<meta property="og:image:alt" content={og.image_alt} />
<meta property="og:locale" content={og.locale} />

<meta name="twitter:card" content={twitter.card} />
<meta name="twitter:site" content={twitter.site} />
<meta name="twitter:title" content={twitter.title} />
<meta name="twitter:description" content={twitter.description} />
<meta name="twitter:image" content={twitter.image} />
<meta name="twitter:creator" content={twitter.creator} />
