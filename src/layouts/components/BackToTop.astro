---
import Arrow from "../../components/svg/arrow.astro";
---

<a id="back-to-top" href="#">
    <div class="arrow-container">
        <Arrow />
    </div>
</a>

<style>
    #back-to-top {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        background-color: var(--color-aptech-gold);
        outline: 2px solid var(--color-aptech-gold);
        outline-offset: 4px;
        z-index: 100;
        mix-blend-mode: difference;
        transition: outline 250ms ease-in-out;
    }

    #back-to-top:hover {
        outline-offset: 8px;
    }

    .arrow-container {
        width: 100%;
        height: 100%;
        display: grid;
        place-content: center;
        rotate: -90deg;
        scale: 0.75;
        --color-text: white;
    }
</style>
