---
import Arrow from "../../components/Arrow.astro";
---

<a id="back-to-top" href="#">
    <div class="arrow-container">
        <Arrow />
    </div>
    <div id="back-to-top-tooltip">
        <p>Back to Top</p>
    </div>
</a>

<script>
    const button = document.getElementById("back-to-top");
    const tooltip = document.getElementById("back-to-top-tooltip");
    button?.addEventListener("mouseover", () => {
        tooltip?.classList.add("visible");
    });
    button?.addEventListener("mouseleave", () => {
        tooltip?.classList.remove("visible");
    });
</script>

<style>
    #back-to-top {
        position: fixed;
        bottom: 2rem;
        right: 2rem;

        width: 2rem;
        height: 2rem;

        background-color: var(--color-aptech-gold);
        mix-blend-mode: difference;

        border-radius: 50%;

        outline: 2px solid var(--color-aptech-gold);
        outline-offset: 4px;

        z-index: 100;

        transition: all var(--transition-duration) ease-in-out;
        scale: 0;
    }

    #back-to-top.visible {
        scale: 1;
    }

    #back-to-top:hover {
        outline-offset: 8px;
    }

    .arrow-container {
        --color-text: white;

        width: 100%;
        height: 100%;

        display: grid;
        place-content: center;

        rotate: -90deg;
        scale: 0.75;
    }

    #back-to-top-tooltip {
        position: absolute;
        top: 0;
        left: -6rem;
        translate: 0% 10%;

        font-size: 0.8rem;
        color: var(--color-bg);

        padding: 0.25rem 0.5rem;

        opacity: 0;
        transition: opacity var(--transition-duration) ease-in;
        transition-delay: 500ms;
    }

    #back-to-top-tooltip.visible {
        opacity: 1;
    }

    #back-to-top-tooltip::before,
    #back-to-top-tooltip::after {
        content: "";

        position: absolute;
        top: 0;
        left: 0;

        width: 100%;
        height: 100%;

        background-color: var(--color-text);

        z-index: -1;
    }

    #back-to-top-tooltip::before {
        transform: skewX(30deg);
    }

    #back-to-top-tooltip::after {
        transform: skewX(-30deg);
    }
</style>
