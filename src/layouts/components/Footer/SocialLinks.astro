---
// Components
import { Image } from "astro:assets";

// Data
import icons from "../../../data/social-icons.json";

const ICON_SIZE = 40;
---

<div>
    <p class="gold">Social Links</p>
    <div id="icon-container">
        {
            icons.map((icon) => (
                <a href={icon.href}>
                    <div class="icon">
                        <Image
                            src={`/assets/social/${icon.src}`}
                            alt={icon.name}
                            width={ICON_SIZE}
                            height={ICON_SIZE}
                            format={icon.format}
                        />
                    </div>
                </a>
            ))
        }
    </div>
</div>

<style>
    div {
        width: 100%;
        text-align: right;
    }

    #icon-container {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        gap: 0.5rem;
    }

    .icon {
        width: 48px;
        height: 48px;
        padding: 4px;
        background-color: #333;
        transition: background-color 250ms ease-in;
    }

    .icon:hover {
        background-color: #777;
    }

    @media (width < 768px) {
        div {
            text-align: center;
        }

        #icon-container {
            justify-content: center;
        }
    }
</style>
