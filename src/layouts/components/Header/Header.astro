---
// Components
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import ScrollProgress from "./ScrollProgress.astro";
---

<header id="header">
    <div class="container">
        <Logo />
        <Navigation />
    </div>
    <ScrollProgress />
</header>

<style>
    header {
        height: clamp(50px, 10vw, 10vh);
        position: sticky;
        top: 0;
        background-color: #ffffff55;
        backdrop-filter: blur(20px);
        z-index: 10;
    }

    div {
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
</style>
