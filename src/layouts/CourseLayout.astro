---
// Components
import Section from "../components/Section.astro";
import Title from "../components/Title.astro";
import BasePlate from "../layouts/BasePlate.astro";
import { Image } from "@astrojs/image/components";

import type { MarkdownLayoutProps } from "astro";
import type { CourseDetails } from "../types";

type Props = MarkdownLayoutProps<CourseDetails>;

const {
    frontmatter: { id, title, cover, description, logo, duration, fee },
} = Astro.props;
---

<BasePlate title={title || "Course " + id}>
    <Section padding="2rem">
        <a href="/courses"> &lt; Back to Courses</a>
        <div class="article-aside">
            <article class="markdown">
                <slot />
            </article>
            <aside>
                <Image
                    src={logo}
                    alt={title}
                    width={64}
                    height={64}
                    format="svg"
                />
                <Title>{title || "Course " + id}</Title>
                <Image
                    src={cover}
                    alt=""
                    width={400}
                    height={225}
                    format="webp"
                />
                <h3>Course Details</h3>
                <p>{description}</p>
                <h3>Course Duration</h3>
                <p>{duration}</p>
                <h3>Course Fee</h3>
                <p>{fee}</p>
            </aside>
        </div>
    </Section>
</BasePlate>

<style>
    a {
        text-align: left;
        width: 100%;
    }

    div {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        gap: 3rem;
    }

    @media (width < 960px) {
        .article-aside {
            flex-direction: column-reverse;
        }
    }

    article {
        flex: 5;
    }

    aside {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem;
        border-radius: 10px;
        flex: 2;
        background-color: #e3e3e377;
    }

    p {
        text-align: center;
    }
</style>
