---
export interface Props {
    level?: number;
    className?: string;
}

const { level = 2, className } = Astro.props;

let Component;
switch (level) {
    case 1:
        Component = "h1";
        break;
    case 2:
        Component = "h2";
        break;
    case 3:
        Component = "h3";
        break;
    case 4:
        Component = "h4";
        break;
    case 5:
        Component = "h5";
        break;
    case 6:
        Component = "h6";
        break;
    default:
        Component = "h2";
        break;
}
---

<Component class:list={[className]}>
    <slot />
</Component>

<style>
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        text-align: center;
        text-transform: uppercase;
    }

    .gold {
        color: var(--color-aptech-gold);
    }
</style>
