---
export interface Props {
    src: string;
    alt?: string;
    size?: string;
}

const { src, alt = "", size = "100px" } = Astro.props;
---

<div>
    <img src={src} alt={alt} width={size} height={size} />
</div>

<style define:vars={{ size }}>
    div {
        --default-size: 100px;
        --border-outline-thickness: 5px;

        display: grid;
        place-content: center;
        object-fit: cover;
        width: var(--size, --default-size);
        height: var(--size, --default-size);
        aspect-ratio: 1 / 1;
        outline: var(--border-outline-thickness) solid var(--color-aptech-gold);
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        transition: outline-offset 250ms;
    }

    div::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: calc(1px + var(--border-outline-thickness)) solid
            var(--color-bg);
        border-radius: 50%;
        z-index: 2;
        transition: border 250ms;
    }

    div:hover {
        outline-offset: var(--border-outline-thickness);
    }
</style>
