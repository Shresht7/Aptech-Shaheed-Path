---
import Avatar from "../../components/Avatar.astro";

export interface Props {
    avatar: string;
    name: string;
    text: string;
}

const { avatar, name, text } = Astro.props;
---

<div>
    <Avatar src={avatar} />
    <p class="testimonial-name">{name}</p>
    <p class="testimonial-text">{text}</p>
</div>

<style>
    div {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.75rem;
        text-align: center;
    }

    .testimonial-name {
        font-weight: bold;
    }

    .testimonial-text {
        font-size: 0.8rem;
        opacity: 0.8;
    }
</style>
