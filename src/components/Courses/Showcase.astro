---
import CourseCard from "./CourseCard.astro";

const courses = [
    { title: "Course 1", cover: "/images/course-1.webp", url: "/courses/1" },
    { title: "Course 2", cover: "/images/course-2.webp", url: "/courses/2" },
    { title: "Course 3", cover: "/images/course-3.webp", url: "/courses/3" },
    { title: "Course 4", cover: "/images/course-2.webp", url: "/courses/4" },
    { title: "Course 5", cover: "/images/course-1.webp", url: "/courses/5" },
];
---

<div>
    {
        courses.map((course) => (
            <CourseCard
                title={course.title}
                cover={course.cover}
                url={course.url}
            />
        ))
    }
</div>

<style>
    div {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 2rem;
    }
</style>
