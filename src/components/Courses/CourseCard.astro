---
export interface Props {
    title: string;
    cover: string;
    url: string;
    logo: string;
}

const { title, cover, url, logo } = Astro.props;
---

<a href={url} class="card-outline">
    <div class="image-container"><img src={cover} alt={title} /></div>
    <div class="card-details">
        <div class="card-text">
            <h3>{title}</h3>
            <p>
                Lorem ipsum dolor, sit amet consectetur adipisicing elit.
                Quisquam voluptate temporibus ipsam repudiandae quae nemo.
            </p>
        </div>
        <img src={logo} alt={title} />
    </div>
</a>

<style>
    .card-outline {
        scale: 1;
        border-radius: 0.25rem;
        width: clamp(400px, 30%, 600px);
        cursor: pointer;
        transition: scale 150ms ease-in-out;
    }

    .card-outline:hover {
        scale: 1.025;
    }

    img {
        border-radius: 1rem;
    }

    .card-details {
        padding: 1rem 0.5rem;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 0.75rem;
    }

    .card-details p {
        font-size: 0.8rem;
    }

    .card-details .card-text {
        flex: 6;
    }
    .card-details img {
        flex: 1;
    }
</style>
