---
// Components
import { Image } from "astro:assets";

// Props
export interface Props {
    id: string;
    title: string;
    cover: string;
    logo: string;
    description: string;
}

const { id, cover, title, description, logo } = Astro.props;
---

<a href={`/courses/${id}`} class="card-outline">
    <div class="image-container">
        <Image src={cover} alt={title} width={400} height={275} format="webp" />
    </div>
    <div class="card-details">
        <div class="card-text">
            <h3>{title}</h3>
            <p>{description}</p>
        </div>
        <Image
            class="logo"
            src={logo}
            alt={title}
            width={24}
            height={24}
            format="svg"
        />
    </div>
</a>

<style>
    .card-outline {
        scale: 1;
        border-radius: 0.25rem;
        width: clamp(400px, 30%, 600px);
        cursor: pointer;
        transition: scale 150ms ease-in-out;
    }

    .card-outline:hover {
        scale: 1.025;
    }

    .image-container {
        aspect-ratio: 4 / 3;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        object-fit: contain;
        overflow: hidden;
        border-radius: 1rem;
    }

    img {
        border-radius: 1rem;
    }

    .logo {
        height: 48px;
    }

    .card-details {
        padding: 1rem 0.5rem;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        gap: 0.75rem;
    }

    .card-details p {
        font-size: 0.8rem;
    }

    .card-details .card-text {
        flex: 6;
    }
    .card-details img {
        flex: 1;
    }
</style>
