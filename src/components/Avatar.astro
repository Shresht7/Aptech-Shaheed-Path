---
// Components
import { Image } from "@astrojs/image/components";

// Props
export interface Props {
    src: string;
    alt?: string;
    size?: number;
}

const { src, alt = "", size = 100 } = Astro.props;
---

<div class="centered-content">
    <Image src={src} alt={alt} width={size} height={size} format="svg" />
</div>

<style>
    div {
        --border-outline-thickness: 5px;

        object-fit: cover;
        aspect-ratio: 1 / 1;
        outline: var(--border-outline-thickness) solid var(--color-aptech-gold);
        transition: outline-offset var(--transition-duration);
        border-radius: 50%;
        overflow: hidden;
        position: relative;
    }

    div::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: calc(1px + var(--border-outline-thickness)) solid
            var(--color-bg);
        border-radius: 50%;
        z-index: 2;
    }

    div:hover {
        outline-offset: var(--border-outline-thickness);
    }
</style>
