---
//  Components
import Title from "../../components/Title.astro";
import Section from "../../components/Section.astro";
import Map from "./Map.astro";
import { Image } from "@astrojs/image/components";

// Data
import icons from "../../data/social-icons.json";

// types
import type { OutputFormat } from "@astrojs/image/dist/loaders";

const ICON_SIZE = 48;
---

<Section>
    <Title>Contact Us</Title>
    <div id="contact-row">
        <div class="flex left">
            <div>
                <p class="gold">Email</p>
                <p>aptechshaheedpath@gmail.com</p>
            </div>
            <div>
                <p class="gold">Phone Number</p>
                <p>9369372934, 7042065607</p>
            </div>
            <div>
                <p class="gold">Address</p>
                <address>
                    <p>
                        309 - Shopping Square-I, Sector-D,<br /> Sushant Golf City,
                        Shaheed Path, <br /> Lucknow - 226030
                    </p>
                </address>
            </div>
            <div>
                <p class="gold">Social Links</p>
                <div class="icons-container">
                    {
                        icons.map((icon) => (
                            <a href={icon.href}>
                                <div class="icon">
                                    <Image
                                        src={`/assets/social/${icon.src}`}
                                        alt={icon.name}
                                        width={ICON_SIZE}
                                        height={ICON_SIZE}
                                        format={icon.format as OutputFormat}
                                    />
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
        <div class="right">
            <Map />
        </div>
    </div>
</Section>

<style>
    div {
        width: 100%;
    }

    .left,
    .right {
        flex: 1;
    }

    p {
        text-align: right;
    }

    p:not(.gold) {
        font-size: 1.5rem;
    }

    #contact-row {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 4rem;
    }

    .icons-container {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        gap: 2rem;
    }

    @media (width < 768px) {
        p {
            font-size: 1.25rem;
            text-align: center;
        }

        #contact-row {
            flex-direction: column;
        }

        .icons-container {
            justify-content: center;
        }
    }
</style>
