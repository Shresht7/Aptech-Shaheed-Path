---
import FeatureLeft from "./FeatureLeft.astro";
import FeatureRight from "./FeatureRight.astro";
import Section from "../../utility/components/Section.astro";
import Title from "../../utility/components/Title.astro";
import Cards from "./Cards.astro";
---

<Section classNames="inverted">
    <Title>COMMITTED TO EXCELLENCE</Title>
    <div class="wrapper">
        <FeatureLeft />
        <FeatureRight />
    </div>
    <Cards />
</Section>

<style>
    .wrapper {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 5rem;
        --flex-left: 1;
        --flex-right: 1;
    }

    @media (max-width: 768px) {
        .wrapper {
            flex-direction: column;
            gap: 3rem;
        }
    }
</style>
