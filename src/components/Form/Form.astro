---
import FormHeader from "./FormHeader.astro";
import FormInputs from "./FormInputs.astro";
import FormButtons from "./FormButtons.astro";
import Section from "../../components/Section.astro";
//  Components
---

<Section classNames="form-section-background inverted">
    <form
        id="contact-form"
        name="contact-form"
        class="container"
        data-netlify="true"
        method="post"
    >
        <FormHeader />
        <FormInputs />
        <FormButtons />
    </form>
</Section>

<style>
    :global(.form-section-background) {
        background-color: var(--color-aptech-gold);
        padding: 5rem 0;
        overflow: hidden;
    }

    #contact-form {
        max-width: 33rem;
        margin: 0 auto;
    }

    form {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: 2rem;
        position: relative;
        z-index: 1;
        transition: scale 1000ms ease-out;
    }

    form::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        scale: 6 2;
        rotate: -60deg;
        z-index: -1;
        background-color: var(--color-bg);
        outline: 4px solid var(--color-aptech-gold);
        outline-offset: -8px;
        transition: all 1000ms ease-out;
        box-shadow: inset 0px 0px 20px 10px #feb10e66;
    }

    form:hover,
    form:focus {
        scale: 1.05;
    }

    form:hover::before,
    form:focus {
        scale: 7 2.5;
        rotate: -70deg;
    }
</style>

