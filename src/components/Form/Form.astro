---
import Button from "../utility/Button.astro";
import Input from "./Input.astro";
//  Components
---

<section class="background">
    <div class="container">
        <form action="/functions/contact">
            <h2>Contact Form</h2>
            <Input label="Name" />
            <Input label="Email" />
            <Input label="Phone Number" />
            <Input label="Other" />
            <div id="form-buttons">
                <Button type="submit" label="SUBMIT" />
                <Button type="reset" label="CLEAR" variant="outline" />
            </div>
        </form>
    </div>
</section>

<style>
    .background {
        background-color: var(--color-aptech-gold);
        padding: 5rem 0;
        overflow: hidden;
    }

    .container {
        max-width: 33rem;
        margin: 0 auto;
    }

    h2 {
        color: var(--color-bg);
        text-align: center;
        z-index: 1;
    }

    form {
        color: var(--color-bg);
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: 1rem;
        position: relative;
        z-index: 1;
    }

    form::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        scale: 10 3;
        rotate: -60deg;
        z-index: -1;
        background-color: var(--color-text);
    }

    #form-buttons {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }
</style>
