---
import Flex from "../utility/base/Flex.astro";

export interface Props {
    label?: string;
    type?: any;
}

const { label = "", type = "text" } = Astro.props;
---

<Flex
    justifyContent="center"
    alignItems="flex-start"
    class:list="full-width"
    gap="0.25rem"
>
    <label>{label}</label>
    <input type={type} class="full-width" />
</Flex>

<style>
    .full-width {
        width: 100%;
    }

    input {
        border-radius: 0.5rem;
        padding: 0.25rem 0.5rem;
    }
</style>
