---
export interface Props {
    label?: string;
    type?: any;
}

const { label = "", type = "text" } = Astro.props;
---

<div class="full-width">
    <label>{label}</label>
    <input type={type} class="full-width" />
</div>

<style>
    .full-width {
        width: 100%;
    }

    input {
        border-radius: 0.5rem;
        padding: 0.25rem 0.5rem;
    }

    div {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 0.25rem;
    }
</style>
