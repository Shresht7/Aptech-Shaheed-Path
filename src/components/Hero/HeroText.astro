---
import Title from "../../components/Title.astro";
---

<script>
    const registerCta = document.getElementById("register-cta");
    const contactForm = document.getElementById("contact-form");

    registerCta?.addEventListener("click", (e) => {
        contactForm?.scrollIntoView({ block: "center" });
    });
</script>

<div id="text-container" class="container">
    <div id="text">
        <div>
            <Title level={1} className="gold">Aptech Learning</Title>
            <div id="branch-title">
                <div></div>
                <p>Shaheed Path</p>
                <div></div>
            </div>
        </div>
        <div>
            <p id="premier-text">
                A premier institute of Computer Education of International
                Reputation
            </p>
            <address>
                309, Shopping Square-I, Sector-D, Sushant Golf City, Shaheed
                Path, Lucknow - 226030
            </address>
        </div>
        <div id="call-to-action">
            <a id="register-cta">
                <b>REGISTER NOW</b>
            </a>
            <a id="extra-cta" href="/courses"> VIEW COURSES</a>
        </div>
    </div>
</div>

<style>
    #text-container {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
    }

    #text {
        --animation-duration: 750ms;
        width: 60%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        color: var(--color-bg);
        text-align: center;
        animation: fade ease-in var(--animation-duration) forwards,
            fly var(--animation-duration) forwards;
    }

    #branch-title {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        text-transform: uppercase;
    }

    #branch-title div {
        flex: 1;
        width: 6.5rem;
        height: 0.75ch;
        background-color: var(--color-bg);
    }

    #branch-title p {
        flex-shrink: 1;
    }

    #premier-text {
        font-size: 1.25rem;
    }

    address {
        color: #999;
    }

    #call-to-action {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 2rem;
    }

    #call-to-action > a {
        --color-button-outline: whitesmoke;
        --color-button-background: whitesmoke;
        --color-button-text: black;

        padding: 0.5rem 1.25rem;
        background-color: var(--color-button-background);
        color: var(--color-button-text);
        font-size: 0.8rem;
        border: 2px solid var(--color-button-background);
        border-radius: 0.25rem;
        outline: 2px solid var(--color-button-outline);
        transition: outline-offset var(--transition-duration) ease-in;
        cursor: pointer;
    }

    #call-to-action > a:hover {
        outline-offset: 2px;
    }

    #call-to-action > #extra-cta {
        --color-button-background: transparent;
        --color-button-text: whitesmoke;
    }

    @media (max-width: 768px) {
        #text {
            width: 100%;
        }

        #call-to-action {
            flex-direction: column;
            gap: 1rem;
            width: 100%;
        }

        #call-to-action > a {
            width: 60%;
        }
    }
</style>
