---
import Posting from "./Posting.astro";
import type { JobDetails } from "../../types";

const postings = await Astro.glob<JobDetails>("./*.md");
---

<section class="full-width">
    <ul>
        {postings.map((posting) => <Posting posting={posting} />)}
    </ul>
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
    }

    ul {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding: 0;
        margin: 0;
        list-style: none;
    }

    ul:first-child {
        border-top: 2px solid #777;
    }
</style>
