---
import Button from "../../utility/components/Button.astro";

export interface Props {
    title: string;
    description: string;
    details: string;
}

const { title, description, details } = Astro.props;
---

<li>
    <div>
        <h3>{title}</h3>
        <p>{description}</p>
        <Button id="job-posting" variant="outline">Show More</Button>
    </div>
    <p id="job-details">{details}</p>
</li>

<script>
    const button = document.getElementById("job-posting");
    const p = document.getElementById("job-details");
    button?.addEventListener("click", () => {
        console.log("WOW");
        p?.classList.toggle("visible");
    });
</script>

<style>
    li {
        width: 100%;
        list-style: none;
    }

    div {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 3rem;
        padding: 1rem 1rem;
        border-bottom: 2px solid #777;
    }

    #job-details {
        display: none;
    }

    #job-details.visible {
        display: block;
    }

    @media (width < 768px) {
        div {
            text-align: justify;
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
